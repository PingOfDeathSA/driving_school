 <div class="p-4 sm:ml-64">
  
    <div class="p-4 border-0 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
        <div class="col-8"> </div>
        <div class="row mb-6 d-flex justify-content-end" style="margin-bottom: 10px;padding: 0;">
            <h1 style="color: #176B87;margin: 0;padding: 0;">Learners</h1>
           
            <div class="col-4 d-flex justify-content-end" style="margin-bottom: 0px;">
                <span><strong style="color: #176B87;"><%= user.username %></strong> </span>
             
               
            </div>
        </div>
        
        <div class="mb-4 rounded bg-white dark:bg-white">
            <div class="flex space-x-4">
                <button class="py-2 px-4 rounded-t-lg bg-blue-500 text-white active-tab" onclick="openTab(event, 'tab1')">
                    <i class="fa-solid fa-users" style="font-size: 20px;color: white;"></i> 
                    Registered Learners</button>
                <button class="py-2 px-4 rounded-t-lg bg-gray-200 text-gray-500 hover:bg-blue-500 hover:text-white" onclick="openTab(event, 'tab2')">
                     <i class="fa-solid fa-dollar-sign" style="font-size: 20px;color: #FFD700;"></i>
                  
                    Paid Learner</button>
                <button class="py-2 px-4 rounded-t-lg bg-gray-200 text-gray-500 hover:bg-blue-500 hover:text-white" onclick="openTab(event, 'tab3')">
                    <i class="fa-solid fa-check-circle" style="font-size: 20px;color: #32CD32;"></i>
                     Passed Learners</button>
                <button class="py-2 px-4 rounded-t-lg bg-gray-200 text-gray-500 hover:bg-blue-500 hover:text-white" onclick="openTab(event, 'tab4')">
              
                    <i class="fa-solid fa-times-circle" style="font-size: 20px;color: #FF6347;"></i>
                    Failed Learners</button>
            </div>
        
            <div class="border-t-2 mt-2 p-4">
                <div id="tab1" class="tabcontent p-4">     
                    <!-- registered learners -->
                    <%- include('taps/registeredlearners') %>
                    <!-- registered learners -->
                </div>
                <div id="tab2" class="tabcontent hidden bg-white p-4">
                    <%- include('taps/paidlearners') %>
                </div>
                <div id="tab3" class="tabcontent hidden bg-white p-4">
                    <p>Content for Tab 3</p>
                </div>
                <div id="tab4" class="tabcontent hidden bg-white p-4">
                    <p>Content for Tab 4</p>
                </div>
            </div>     
        </div>
        
    </div>
 </div>
 
 <script>
    function openTab(evt, tabName) {
        var i, tabcontent, tablinks;

        // Hide all tab contents
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].classList.add("hidden");
        }

        // Remove active class from all buttons
        tablinks = document.querySelectorAll('.flex button');
        tablinks.forEach((link) => {
            link.classList.remove("bg-blue-500", "text-white", "active");
            link.classList.add("bg-gray-200", "text-gray-500");
        });

        // Show the current tab
        document.getElementById(tabName).classList.remove("hidden");

        // Add active class to the clicked tab button
        evt.currentTarget.classList.add("bg-blue-500", "text-white");
    }
</script>
